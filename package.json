  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\"",
    "start": "NODE_ENV=test nest start --watch",
    "start:test": "NODE_ENV=test nest start --watch",
    "start:production": "NODE_ENV=production nest start --watch",
    "pm2:kill": "pm2 kill",
    "deploy": "npm run build && pm2 restart storeverserepo-serve",
    "deploy:dev": "npm run build && pm2 restart storeverserepo-serve --update-env --env development",
    "deploy:test": "npm run build && pm2 restart storeverserepo-serve --update-env --env test",
    "deploy:prod": "npm run build && pm2 restart storeverserepo-serve --update-env --env production",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^7.1.1",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.10",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.10",
    "@scalar/nestjs-api-reference": "^1.0.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.16.0",
