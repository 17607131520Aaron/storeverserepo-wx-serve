{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // 构建时关闭开发选项，减少输出体积
    "sourceMap": false,
    "declarationMap": false,
    "incremental": false,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "**/*.e2e-spec.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
